<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="FixedWidth.css" />

	<g:VerticalPanel addStyleNames="{style.infopanel}" horizontalAlignment="ALIGN_CENTER">
        <g:Label ui:field="prologue"/>
        <g:FlowPanel>
            <g:Label addStyleNames="{style.none}">Current Password:</g:Label>
            <g:PasswordTextBox addStyleNames="{style.none}" ui:field="currentPasswordBox"/>
        </g:FlowPanel>
        <g:FlowPanel>
            <g:Label addStyleNames="{style.none}">New Password:</g:Label>
            <g:PasswordTextBox addStyleNames="{style.none}" ui:field="newPasswordBox"/>
        </g:FlowPanel>
        <g:FlowPanel>
            <g:Label addStyleNames="{style.none}">Confirm Password:</g:Label>
            <g:PasswordTextBox addStyleNames="{style.none}" ui:field="confirmPasswordBox"/>
        </g:FlowPanel>
		<g:FlowPanel addStyleNames="{style.horizontalpanel}">
			<g:Button addStyleNames="{style.adjustingbutton}" ui:field="noButton" />
			<g:Button addStyleNames="{style.adjustingbutton}" ui:field="yesButton" />
		</g:FlowPanel>
	</g:VerticalPanel>

</ui:UiBinder>
